#!/bin/sh

paru -S --needed --noconfirm \
    bat \
    git \
    just \
    keychain \
    man-pages \
    openssh \
    ripgrep \
    unzip \
    tree \
    wget \
    xclip \
    zip

mkdir -p /home/$(whoami)/.config

ln -sf $(git rev-parse --show-toplevel)/.gitconfig $HOME/.gitconfig
ln -sf $(git rev-parse --show-toplevel)/.gitignore $HOME/.gitignore
